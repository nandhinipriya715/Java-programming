#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int x,a,b;
    scanf("%d",&x);
    scanf("%d",&a);
    scanf("%d",&b);
    float profit=(x*a)-(x*b+100);
    printf("Number of copies sold:%d",x);
    printf("\nCost of each copy:%d",a);
    printf("\nCost spent by agency on each newspaper:%d",b);
    printf("\nThe profit obtained is Rs.%.2f",profit);
    return 0;
}
