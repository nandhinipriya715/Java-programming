import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

public class Solution {

    public static void main(String[] args) {
        Scanner A=new Scanner(System.in);
        int a=A.nextInt();
        int b=A.nextInt();
        int c=A.nextInt();
        int d=A.nextInt();
        int e=A.nextInt();
        double a1=0.5*a*b;
        double a2=c+d+e;
        System.out.printf("Area of Triangle is %.2f\n",a1);
        System.out.printf("Perimeter of Triangle is %.2f\n",a2);
        
    
    }
}
